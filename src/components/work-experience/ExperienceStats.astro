---
import { Briefcase, Calendar, Users, TrendingUp } from "lucide-astro";

interface Props {
  stats: {
    total: number;
    currentlyWorking: number;
    totalMonths: number;
    uniqueSkills: number;
    companiesWorked: number;
    averageMonthsPerJob: number;
  };
}

const { stats } = Astro.props;

const formatExperienceTime = (months: number): string => {
  if (months < 12) return `${months} meses`;
  const years = Math.floor(months / 12);
  const remainingMonths = months % 12;
  if (years === 1 && remainingMonths === 0) return "1 a침o";
  if (years === 1) return `1 a침o ${remainingMonths}m`;
  if (remainingMonths === 0) return `${years} a침os`;
  return `${years}a ${remainingMonths}m`;
};
---

<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
  <!-- Total Experience -->
  <div
    class="bg-gradient-to-br from-violet-50 to-purple-50 dark:from-violet-900/20 dark:to-purple-900/20 rounded-2xl p-6 border border-violet-200 dark:border-violet-700 hover:shadow-lg transition-all duration-300 hover:-translate-y-1"
  >
    <div class="flex items-center justify-between mb-4">
      <div class="p-2 bg-violet-100 dark:bg-violet-800/50 rounded-lg">
        <Calendar class="w-6 h-6 text-violet-600 dark:text-violet-400" />
      </div>
      <div class="text-right">
        <div class="text-2xl font-bold text-violet-600 dark:text-violet-400">
          {formatExperienceTime(stats.totalMonths)}
        </div>
        <div class="text-sm text-violet-600/70 dark:text-violet-400/70">
          experiencia
        </div>
      </div>
    </div>
    <div class="space-y-2">
      <h3 class="font-semibold text-zinc-900 dark:text-white">Tiempo Total</h3>
      <div class="w-full bg-violet-200 dark:bg-violet-800 rounded-full h-2">
        <div
          class="bg-gradient-to-r from-violet-500 to-purple-500 h-2 rounded-full transition-all duration-1000 ease-out"
          style="width: 100%"
        >
        </div>
      </div>
      <p class="text-xs text-zinc-600 dark:text-zinc-400">
        {stats.total} {stats.total === 1 ? 'posici칩n' : 'posiciones'}
      </p>
    </div>
  </div>

  <!-- Companies -->
  <div
    class="bg-gradient-to-br from-blue-50 to-cyan-50 dark:from-blue-900/20 dark:to-cyan-900/20 rounded-2xl p-6 border border-blue-200 dark:border-blue-700 hover:shadow-lg transition-all duration-300 hover:-translate-y-1"
  >
    <div class="flex items-center justify-between mb-4">
      <div class="p-2 bg-blue-100 dark:bg-blue-800/50 rounded-lg">
        <Briefcase class="w-6 h-6 text-blue-600 dark:text-blue-400" />
      </div>
      <div class="text-right">
        <div class="text-2xl font-bold text-blue-600 dark:text-blue-400">
          {stats.companiesWorked}
        </div>
        <div class="text-sm text-blue-600/70 dark:text-blue-400/70">
          {stats.companiesWorked === 1 ? 'empresa' : 'empresas'}
        </div>
      </div>
    </div>
    <div class="space-y-2">
      <h3 class="font-semibold text-zinc-900 dark:text-white">Organizaciones</h3>
      <div class="w-full bg-blue-200 dark:bg-blue-800 rounded-full h-2">
        <div
          class="bg-blue-500 h-2 rounded-full transition-all duration-1000 ease-out"
          style="width: 85%"
        >
        </div>
      </div>
      <p class="text-xs text-zinc-600 dark:text-zinc-400">
        Diversidad de entornos laborales
      </p>
    </div>
  </div>

  <!-- Skills Developed -->
  <div
    class="bg-gradient-to-br from-green-50 to-emerald-50 dark:from-green-900/20 dark:to-emerald-900/20 rounded-2xl p-6 border border-green-200 dark:border-green-700 hover:shadow-lg transition-all duration-300 hover:-translate-y-1"
  >
    <div class="flex items-center justify-between mb-4">
      <div class="p-2 bg-green-100 dark:bg-green-800/50 rounded-lg">
        <TrendingUp class="w-6 h-6 text-green-600 dark:text-green-400" />
      </div>
      <div class="text-right">
        <div class="text-2xl font-bold text-green-600 dark:text-green-400">
          {stats.uniqueSkills}
        </div>
        <div class="text-sm text-green-600/70 dark:text-green-400/70">
          habilidades
        </div>
      </div>
    </div>
    <div class="space-y-2">
      <h3 class="font-semibold text-zinc-900 dark:text-white">Skills Desarrolladas</h3>
      <div class="w-full bg-green-200 dark:bg-green-800 rounded-full h-2">
        <div
          class="bg-green-500 h-2 rounded-full transition-all duration-1000 ease-out"
          style="width: 90%"
        >
        </div>
      </div>
      <p class="text-xs text-zinc-600 dark:text-zinc-400">
        Competencias profesionales
      </p>
    </div>
  </div>

  <!-- Current Status -->
  <div
    class="bg-gradient-to-br from-amber-50 to-orange-50 dark:from-amber-900/20 dark:to-orange-900/20 rounded-2xl p-6 border border-amber-200 dark:border-amber-700 hover:shadow-lg transition-all duration-300 hover:-translate-y-1"
  >
    <div class="flex items-center justify-between mb-4">
      <div class="p-2 bg-amber-100 dark:bg-amber-800/50 rounded-lg">
        <Users class="w-6 h-6 text-amber-600 dark:text-amber-400" />
      </div>
      <div class="text-right">
        <div class="text-2xl font-bold text-amber-600 dark:text-amber-400">
          {stats.currentlyWorking > 0 ? "游릭" : "游댌"}
        </div>
        <div class="text-sm text-amber-600/70 dark:text-amber-400/70">
          estado
        </div>
      </div>
    </div>
    <div class="space-y-2">
      <h3 class="font-semibold text-zinc-900 dark:text-white">
        {stats.currentlyWorking > 0 ? "Trabajando" : "Disponible"}
      </h3>
      <div class="w-full bg-amber-200 dark:bg-amber-800 rounded-full h-2">
        <div
          class="bg-gradient-to-r from-amber-500 to-orange-500 h-2 rounded-full transition-all duration-1000 ease-out"
          style="width: 100%"
        >
        </div>
      </div>
      <p class="text-xs text-zinc-600 dark:text-zinc-400">
        {stats.currentlyWorking > 0 
          ? "Actualmente empleado" 
          : "Abierto a oportunidades"
        }
      </p>
    </div>
  </div>
</div>